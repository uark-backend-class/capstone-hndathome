{{#if location.id}}
<h1>Edit Zip Code</h1>
{{else}}
<h1>Add Zip Code</h1>
{{/if}}
<form action="/update" method="POST">
    Zip Code <input class="form-control" type="text" name="zip_code" minlength="5" maxlength="5" pattern="^\d{5}$"
        value="{{location.zip_code}}" />
    Alias <input class="form-control" type="text" name="alias" value="{{location.alias}}" />
    <input type="hidden" name="id" value="{{location.id}}" />
    <input type="hidden" name="pg_zip_code" value="{{location.zip_code}}" />
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if location.validationError}}
<p><strong>{{location.validationError}}</strong></p>
{{/if}}