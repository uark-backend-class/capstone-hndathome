{{>navbar}}
<div class="container">
    <main role="main">
        {{#if location.id}}
        <h1 style="margin-top: 20px;">Edit Zip Code</h1>
        {{else}}
        <h1 style="margin-top: 20px;">Add Zip Code</h1>
        {{/if}}
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <h5 class="card-header">
                        <div class="row">
                            <div class="col-6">
                                Zip Code
                            </div>
                            <div class="col-6">
                                Alias
                            </div>
                        </div>
                    </h5>
                    <form action="/update" method="POST">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-6">
                                        <input type="text" class="form-control" placeholder="Zip Code" name="zip_code"
                                            minlength="5" maxlength="5" pattern="^\d{5}$"
                                            value="{{location.zip_code}}" />
                                    </div>
                                    <div class="col-6">
                                        <input type="text" class="form-control" placeholder="Alias" name="alias"
                                            value="{{location.alias}}" />
                                    </div>
                                </div>
                                <input type="hidden" name="id" value="{{location.id}}" />
                                <input type="hidden" name="pg_zip_code" value="{{location.zip_code}}" />
                            </li>
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-12">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </form>
                    {{#if location.validationError}}
                    <p><strong>{{location.validationError}}</strong></p>
                    {{/if}}
                </div>
            </div>
        </div>
    </main>
</div>