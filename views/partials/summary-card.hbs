<div class="col-lg-4" style="margin-bottom: 40px;">
    <div id="myCarousel{{zip_code}}" class="carousel slide" data-ride="carousel" style="margin-bottom: 0"
        data-interval="false">
        {{!-- <ol class="carousel-indicators">
            <li style="background-color: #007bff;" data-target="#myCarousel{{zip_code}}" data-slide-to="0"
                class="active">
            </li>
            </li>
            <li id="listItemMap{{zip_code}}" style="background-color: #007bff;" data-target="#myCarousel{{zip_code}}"
                data-slide-to="1">
            </li>
            <li style="background-color: #007bff;" data-target="#myCarousel{{zip_code}}" data-slide-to="2">
            </li>
        </ol> --}}
        <div class="carousel-inner">
            {{#if localCovidData}}
            <div class="carousel-item active">
                <div class="card mb-4 shadow-sm" style="height: 100%;">
                    <div class="card-header"><strong>Local Covid-19 Positive Count</strong></div>
                    <div class="card-body">
                        <div class="svg-container">
                            {{{graphics localCovidData "positiveCt"}}}
                        </div>
                    </div>
                    <div class="card-footer summary-card-footer">
                        <h5 class="card-text">
                            {{#if alias}}
                            {{alias}}
                            {{else}}
                            {{default_city}}, {{state_abbr}} {{zip_code}}
                            {{/if}}
                        </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/details/{{zip_code}}" class="btn btn-primary">View Details</a>
                            </div>
                            <small class="text-muted summary-text-muted"></small>
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="carousel-item active">
                <div class="card mb-4 shadow-sm" style="height: 100%;">
                    <div class="card-header"><strong>Local Covid-19 Positive Count</strong></div>
                    <div class="card-body summary-card-body">
                        <h5>No county data available</h5>
                    </div>
                    <div class="card-footer summary-card-footer">
                        <h5 class="card-text">
                            {{#if alias}}
                            {{alias}}
                            {{else}}
                            {{default_city}}, {{state_abbr}} {{zip_code}}
                            {{/if}}
                        </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/details/{{zip_code}}" class="btn btn-primary">View Details</a>
                            </div>
                            <small class="text-muted summary-text-muted"></small>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            <div class="carousel-item">
                <div class="card mb-4 shadow-sm" style="height: 100%;">
                    <div class="card-header"><strong>Local Covid-19 Testing Locations</strong></div>
                    <div id="map{{zip_code}}" class="card-body">
                    </div>
                    <div class="card-footer summary-card-footer">
                        <h5 class="card-text">
                            {{#if alias}}
                            {{alias}}
                            {{else}}
                            {{default_city}}, {{state_abbr}} {{zip_code}}
                            {{/if}}
                        </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/details/{{zip_code}}" class="btn btn-primary">View Details</a>
                            </div>
                            <small class="text-muted summary-text-muted"></small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="card mb-4 shadow-sm" style="height: 100%;">
                    <div class="card-header"><strong>Department of Health Links</strong></div>
                    <div class="card-body summary-card-body">
                        <div>
                            <p style="text-align: center;">{{state}} Department of Health</p>
                            <ul>
                                <li><a href={{statesInfo.covid19Site}}>Covid-19
                                        Site</a></li>
                                <li><a href={{statesInfo.covid19SiteSecondary}}>Covid-19
                                        Secondary
                                        Site</a></li>
                                {{{getTwitter statesInfo.twitter}}}
                            </ul>
                        </div>
                    </div>
                    <div class="card-footer summary-card-footer">
                        <h5 class="card-text">
                            {{#if alias}}
                            {{alias}}
                            {{else}}
                            {{default_city}}, {{state_abbr}} {{zip_code}}
                            {{/if}}
                        </h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/details/{{zip_code}}" class="btn btn-primary">View Details</a>
                            </div>
                            <small class="text-muted summary-text-muted"></small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel{{zip_code}}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel{{zip_code}}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>