<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <div width="100%" height="225" class="bd-placeholder-img card-img-top">
            <div id="myCarousel{{zip_code}}" class="carousel slide" data-ride="carousel" style="margin-bottom: 0"
                data-interval="false">
                <ol class="carousel-indicators">
                    <li style="background-color: #007bff;" data-target="#myCarousel{{zip_code}}" data-slide-to="0"
                        class="active">
                    </li>
                    </li>
                    <li id="listItemMap{{zip_code}}" style="background-color: #007bff;"
                        data-target="#myCarousel{{zip_code}}" data-slide-to="1">
                    </li>
                    <li style="background-color: #007bff;" data-target="#myCarousel{{zip_code}}" data-slide-to="2">
                    </li>
                </ol>
                <div class="carousel-inner">
                    {{#if localCovidData}}
                    <div class="carousel-item active" style="padding-top: 40px;">
                        {{{graphics localCovidData "positiveCt"}}}
                        <div class="container">
                            <div class="bottom-caption-title">
                                <p>
                                    Covid-19 Positives
                                </p>
                            </div>
                        </div>
                    </div>
                    {{else}}
                    <div class="carousel-item active">
                        <img class="third-slide"
                            src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
                            alt="No data availabe" />
                        <div class="carousel-container">
                            <div class="my-carousel-caption">
                                <p style="text-align: center;">No local Covid-19 data availabe</p>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    <div class="carousel-item">
                        <div id="map{{zip_code}}" style="margin-bottom: 45px;">
                        </div>
                        <div class="container">
                            <div class="bottom-caption-title">
                                <p>Covid-19 Testing Locations</p>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="third-slide"
                            src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
                            alt="Third slide" />
                        <div class="carousel-container">
                            <div class="my-carousel-caption">
                                <p style="text-align: center;">{{state}} Department of Health</p>
                                <ul style="display: table;margin-right: auto;margin-left: auto;">
                                    <li><a class=" covid19-links" href={{statesInfo.covid19Site}}>Covid-19
                                            Site</a></li>
                                    <li><a class="covid19-links" href={{statesInfo.covid19SiteSecondary}}>Covid-19
                                            Secondary
                                            Site</a></li>
                                    {{{getTwitter statesInfo.twitter}}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h5 class="card-text">
                {{#if alias}}
                {{alias}}
                {{else}}
                {{default_city}}, {{state_abbr}} {{zip_code}}
                {{/if}}
            </h5>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="/details/{{zip_code}}" class="btn btn-primary">View Details</a>
                </div>
                <small class="text-muted"></small>
            </div>
        </div>
    </div>
</div>